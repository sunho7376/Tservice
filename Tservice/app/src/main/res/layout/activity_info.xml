<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tservice.tservice.MyPostList.InfoActivity">

    <TextView
        android:text="ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tviewId" />

    <TextView
        android:text="이름:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tviewName" />

    <TextView
        android:text="연락처:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tviewContact" />

    <TextView
        android:text="주소:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tviewAddress" />

    <TextView
        android:text="내가 쓴 글 목록"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/tivewMyPostTitle"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="글 제목"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/tv_title" />

        <TextView
            android:text="공연 이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/tv_pername" />

        <TextView
            android:text="공연 날짜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/tv_perdate" />

        <TextView
            android:text="가격"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/tv_cost" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myPostList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>


</LinearLayout>
